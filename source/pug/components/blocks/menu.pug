mixin menu(data)
  section.menu
    .container
      each item in menuData
        .menu__row(class= item.isReverse ? "left" : "right")
          .menu__text
            h2.menu__title= item.title
            p.menu__desc= item.text
          .menu__img
            +picture("content", item.img, item.format, 670, 560, item.alt)
